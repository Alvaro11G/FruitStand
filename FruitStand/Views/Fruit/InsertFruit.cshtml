@model Fruit
<h2>Create a New Fruit</h2>
@using (Html.BeginForm("InsertFruitToDatabase", "Fruit", "Post"))
{

    <label asp-for="FruitName" class="control-label">Name</label>

    <input type="text" name="FruitName" class="form-control" value="" />

    <label asp-for="Price" class="control-label">Price</label>

    <input type="number" step="0.01" name="Price" class="form-control" />

    <label asp-for="StockLevel" class="control-label">Stocklevel</label>

    <input type="number" step="1.0" name="StockLevel" class="form-control" />



    <input type="submit" value="Create Fruit" class="btn btn-primary" />
}