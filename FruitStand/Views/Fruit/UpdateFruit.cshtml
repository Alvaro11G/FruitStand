@model Fruit

<h2>Update @Model.FruitName</h2>

@using (Html.BeginForm("UpdateFruitToDatabase", "Fruit", "Post"))
{
    <input asp-for="FruitName" type="hidden" value="@Model.FruitName" />

    <label asp-for="FruitName" class="control-label">Name</label>

    <input type="text" name="Name" class="form-control" value="@Model.FruitName" />

    <label asp-for="Price" class="control-label">Price</label>

    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

    <label asp-for="StockLevel" class="control-label">StockLevel</label>

    <input type="number" step="1.0" name="Stocklevel" class="form-control" value="@Model.StockLevel" />

    <input type="submit" value="Update Fruit" class="btn btn-primary" />

}


